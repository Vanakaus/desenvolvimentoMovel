generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id                Int               @id @default(autoincrement())
  email             String            @unique
  name              String
  password          String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  userAtividades    userAtividades[]  @relation("autor")

  @@map("users")
}



model Atividade {
  id        Int       @id @default(autoincrement())
  titulo    String
  descricao String
  data      DateTime  @default(now())

  atividadeUser userAtividades[]  @relation("atividade")

  @@map("atividade")
}



model userAtividades {
  id_aluno      Int       @unique
  id_atividade  Int       @unique
  data          DateTime  @default(now())
  nota          Decimal

  autor         User      @relation("autor", fields: [id_aluno], references: [id])
  atividade     Atividade @relation("atividade", fields: [id_aluno], references: [id])

  @@map("userAtividades")
}

